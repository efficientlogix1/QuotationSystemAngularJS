

<div class="modal fade" id="DepartmentModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Department Setup</h4>
            </div>
            <form class="form-horizontal" role="form" ng-submit="SaveDepartment()">
                <div class="modal-body">

                    <!--  Name -->
                    <div>
                        <input type="hidden" name="name" ng-model="Department.ID" />
                        <label>Department<span style="color:red">*</span></label>
                        <input type="text" ng-model="Department.Name" class="form-control" placeholder="Type Name" maxlength="50" required />
                    </div>
                    <br />
                    <!-- Status -->
                    <div>
                        <label>Active</label>
                        <input type="checkbox" class="checkbox" ng-model="Department.IsActive" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>

    </div>
</div>
