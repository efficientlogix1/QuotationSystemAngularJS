
@{
    ViewBag.Title = "Category Setup";
}

<script src="~/Angular/Category/CategorySetup.js"></script>
<h4>
    Enter category details below:
</h4>
<form ng-controller="CategoryController" name="CategoryForm" ng-submit="SubmitForm()">
    <div class="row">
        <div class="form-group col-sm-6">
            <input class="form-control" type="text" placeholder="Category Number" ng-model="category.Number" />
        </div>
        <div class="form-group col-sm-6">
            <input class="form-control" type="text" placeholder="Name" ng-model="category.Name" />
        </div>
        <div class="form-group col-sm-6">
            <input class="form-control" type="text" placeholder="Type" ng-model="category.Type" />
        </div>

        <div class="form-group col-sm-6">
            <textarea class="form-control" style="resize:none;" placeholder="Description" ng-model="category.Description"></textarea>
        </div>
        <div class="form-group col-sm-6">
            <h4 style="color:red;">Upload Excel File in xlsx Format</h4>
            <input type="file" name="file" data-provide="dropify" onchange="angular.element(this).scope().readURL(this)" id="imgInp" accept=".csv,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
        </div>

       
        <div class="form-group col-sm-6">
            <a href='~/Content/images/UploadExcelFile/BOM List.xlsx' target="_blank"><img src="/Assets/images/Excel.png" height="100" width="100" alt="Excel File" />Download Template</a>
            @*<a onclick="downloadExcel(this)"><img src="/Assets/images/Excel.png" height="100" width="100" alt="Excel File" /></a>*@
        </div>
        <div class="form-group col-sm-6">
            <label>Status: <input type="checkbox" ng-model="category.IsActive" /></label>
        </div>

    </div>
    <div class="row">
        <div class="form-actions col-sm-6" style="text-align:right">
            <a href="/Category/CategoryList" class="btn btn-light-grey go-back">
                <i class="fa fa-circle-arrow-left"></i> Back
            </a>&nbsp;
            <a href="/" class="btn btn-info go-back">
                <i class="fa fa-circle-arrow-left"></i> Cancel
            </a>&nbsp;
            <button type="submit" class="btn btn-purple">
                Submit <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>
    </div>
</form>

